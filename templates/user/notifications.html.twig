{% extends 'layout.html.twig' %}

{% block navigation %}
    {% set active_menu = 'user-profile' %}

    {{ parent() }}
{% endblock %}

{% block content %}
<div class="row">

    <div class="small-12 large-8 large-offset-2 end columns">
        <div class="text-right">
            <a href="{{ path('user-profile') }}">edit profile</a>
            <hr />
        </div>

        <ul class="breadcrumbs">
            <li><a href="{{ path('homepage') }}"><i class="fa fa-home"></i> Home</a></li>
            <li class="current one-line"><a href="#">Notifications {{ app.request.user }}</a></li>
        </ul>

        <table>
            <thead>
                <tr>
                    <th class="text-center"><i class="fa fa-clock-o"></i></th>
                    <th class="text-center">&nbsp;</th>
                    <th class="text-center"><i class="fa fa-check"></i></th>
                </tr>
            </thead>
            <tbody>
                {% for notification in security.user.unreadNotifications %}
                <tr>
                    <td>{{ notification.createdAt|time_ago_in_words }}</td>
                    <td>{{ markdown(notification.message)|replace({'<p>':'', '</p>':''}) }}</td>
                    <td><a href="{{ path('user-notification-read', {id: notification.id}) }}"><i class="fa fa-check"></i></a></td>
                </tr>
                {% else %}
                <tr><td colspan="3">no unread notifications</td></tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

</div>

{% endblock %}

