{% extends 'TobiasOlryTalklyBundle::base.html.twig' %}

{% block body %}

<a class="show-for-large-up" href="https://github.com/tolry/talkly">
    <img style="position: absolute; top: 0; right: 0; border: 0; z-index: 9999;"
         src="https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67"
         alt="Fork me on GitHub"
         data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png">
</a>

<nav class="fixed" headroom>
    {% set active_menu = 'homepage' %}
    {% block navigation %}
        <div class="row">
            <ul class="text-center">
                <li class="{{ (active_menu == 'homepage') ? 'active' : '' }} small-3 columns">
                    <a href="{{ path('homepage') }}">
                        <i class="fa fa-home"></i>
                        <span><span class="hide-for-small-only"> Home</span></span>
                    </a>
                </li>
                <li class="{{ (active_menu == 'calendar') ? 'active' : '' }} small-3 columns">
                    <a href="{{ path('calendar') }}">
                        <i class="fa fa-calendar"></i>
                        <span><span class="hide-for-small-only"> Calendar</span></span>
                    </a>
                </li>
                <li class="{{ (active_menu == 'archive') ? 'active' : '' }} small-3 columns">
                    <a href="{{ path('archive') }}">
                        <i class="fa fa-file-archive-o"></i>
                        <span><span class="hide-for-small-only"> Archive</span></span>
                    </a>
                </li>
                <li class="{{ (active_menu == 'user-profile') ? 'active' : '' }} small-3 columns one-line">
                    <a href="{{ path('user-notifications') }}">
                        <i class="fa fa-user"></i>
                        <span><span class="hide-for-small-only"> {{ app.user }}</span></span>
                        {% if app.user.unreadNotifications|length > 0 %}
                            <span class="label info round" data-tooltip
                                  title="{{ app.user.unreadNotifications|length }} unread notification(s)">
                                {{ app.user.unreadNotifications|length }}
                            </span>
                        {% endif %}
                    </a>
                </li>
            </ul>
        </div>
    {% endblock %}
</nav>

<header>
    <div class="row">
        <div class="large-12 columns text-center">
            <h1><i class="fa fa-bullhorn"></i> talkly</h1>

            <h2>
                <small>request, vote &amp; deliver the talks you like to hear</small>
            </h2>
        </div>
    </div>
</header>

<main>
    <div class="row">
        <div class="small-12 columns">
            <div id="flash"></div>
        </div>
    </div>

    {% block content %}{% endblock %}
</main>

<footer class="text-center">
    <div class="row">
        <div class="large-12 columns">
            Fork me on <a href="https://github.com/tolry/talkly">GitHub</a>
        </div>
    </div>
</footer>

{% endblock %}